@page "/drivers"
@using SportsBettingAnalyzer.Services
@using SportsBettingAnalyzer.Models
@inject SimulationStateService SimulationState
@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager
@inject FileExportService FileExportService
@rendermode InteractiveServer

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">@_selectedYear NASCAR Driver Roster</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">Select drivers to include in the Monte Carlo simulation. Filter by series, year, and minimum races.</MudText>

    <MudPaper Class="pa-4 mb-4">
        <div class="d-flex gap-4 align-center flex-wrap">
            <MudSelect T="string" Label="Series" @bind-Value="selectedSeries" AnchorOrigin="Origin.BottomCenter" Class="flex-grow-0" Style="min-width: 150px;">
                <MudSelectItem Value="@("cup")">Cup Series</MudSelectItem>
                <MudSelectItem Value="@("xfinity")">Xfinity Series</MudSelectItem>
                <MudSelectItem Value="@("truck")">Truck Series</MudSelectItem>
            </MudSelect>
            
            <MudNumericField @bind-Value="_selectedYear" Label="Year" Variant="Variant.Outlined" Min="2012" Max="2026" Class="flex-grow-0" Style="width: 100px;" />

            <MudNumericField @bind-Value="minRaces" Label="Min Races" Variant="Variant.Outlined" Min="0" Max="100" Class="flex-grow-0" Style="width: 100px;" />
            
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ReloadRoster" Disabled="@isLoading">
                @if (isLoading)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                    <MudText Class="ms-2">Loading...</MudText>
                }
                else
                {
                    <MudText>Load Roster</MudText>
                }
            </MudButton>
            
            <MudSpacer />
            
            <MudMenu Label="Export" Variant="Variant.Filled" Color="Color.Info" EndIcon="@Icons.Material.Filled.KeyboardArrowDown">
                <MudMenuItem OnClick="ExportCsv">Export CSV</MudMenuItem>
                <MudMenuItem OnClick="ExportJson">Export JSON</MudMenuItem>
            </MudMenu>

            <MudButton Variant="Variant.Filled" Color="Color.Secondary" EndIcon="@Icons.Material.Filled.ArrowForward" OnClick="GoToSimulation">
                Go to Simulation
            </MudButton>
        </div>
    </MudPaper>

    <MudPaper Class="pa-4">
        <div class="d-flex gap-2 mb-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SelectAll">Select All</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="DeselectAll">Deselect All</MudButton>
            <MudSpacer />
            <MudText Class="align-self-center">Selected: @SimulationState.Drivers.Count(d => d.IsSelected) / @SimulationState.Drivers.Count</MudText>
        </div>

        <MudTable Items="@SimulationState.Drivers" Dense="true" Hover="true" Striped="true" Filter="new Func<DriverRoster,bool>(FilterFunc)" Loading="@isLoading">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Drivers</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Select</MudTh>
                <MudTh>Driver</MudTh>
                <MudTh>Team</MudTh>
                <MudTh>Manufacturer</MudTh>
                <MudTh>Total Races</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Select">
                    <MudCheckBox Value="@context.IsSelected" ValueChanged="@((bool v) => OnCheckedChanged(context, v))" Color="Color.Primary"></MudCheckBox>
                </MudTd>
                <MudTd DataLabel="Driver">@context.Name</MudTd>
                <MudTd DataLabel="Team">@context.Team</MudTd>
                <MudTd DataLabel="Manufacturer">@context.Manufacturer</MudTd>
                <MudTd DataLabel="Total">@context.TotalRaces</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudPaper>
</MudContainer>

@code {
    private string searchString = "";
    private string selectedSeries = "cup";
    private int minRaces = 1;
    private int _selectedYear = 2025;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        if (!SimulationState.IsInitialized)
        {
            await ReloadRoster();
        }
    }

    private async Task ReloadRoster()
    {
        isLoading = true;
        await SimulationState.LoadRosterAsync(selectedSeries, minRaces, _selectedYear);
        isLoading = false;
    }

    private void OnCheckedChanged(DriverRoster driver, bool isSelected)
    {
        driver.IsSelected = isSelected;
    }

    private void SelectAll()
    {
        SimulationState.SelectAll();
    }

    private void DeselectAll()
    {
        SimulationState.DeselectAll();
    }

    private void GoToSimulation()
    {
        NavigationManager.NavigateTo("/simulation");
    }

    private async Task ExportCsv()
    {
        await FileExportService.ExportToCsv(SimulationState.Drivers, $"roster_{selectedSeries}_{_selectedYear}.csv");
        Snackbar.Add("Roster exported to CSV", Severity.Success);
    }

    private async Task ExportJson()
    {
        await FileExportService.ExportToJson(SimulationState.Drivers, $"roster_{selectedSeries}_{_selectedYear}.json");
        Snackbar.Add("Roster exported to JSON", Severity.Success);
    }

    private bool FilterFunc(DriverRoster driver) => FilterFunc1(driver, searchString);

    private bool FilterFunc1(DriverRoster driver, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (driver.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (driver.Team.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (driver.Manufacturer.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
}
